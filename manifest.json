{
    "name": "MTG Card Extension",
    "version": "1.0",
    "description": "A notepad to quickly store Magic The Gathering cards for deck building",
    "permissions": ["storage", "declarativeContent", "contextMenus"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/logo_16.png",
        "32": "images/logo_32.png",
        "48": "images/logo_48.png",
        "128": "images/logo_128.png"
      }
    },
    "icons": {
        "16": "images/logo_16.png",
        "32": "images/logo_32.png",
        "48": "images/logo_48.png",
        "128": "images/logo_128.png"
    },
    "manifest_version": 2
  }